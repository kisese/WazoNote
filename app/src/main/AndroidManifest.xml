<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kisese.brayo.wazonote">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNoteActivity"
            android:label="@string/add_note">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".StickyNoteActivity"
            android:label="@string/sticky">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".EditNoteActivity"
            android:label="@string/edit_note">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="storage.EditActivity" />
        </activity>
        <activity
            android:name=".SecureActivity"
            android:label="">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".SecureMain"
            android:label="@string/secure_main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SecureActivity" />
        </activity>
        <activity
            android:name=".ResetActivity"
            android:label="@string/reset_password">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SecureActivity" />
        </activity>
        <activity
            android:name=".SecureList"
            android:label="@string/secure_list">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SecureMain" />
        </activity>
        <activity
            android:name=".SecureNew"
            android:label="@string/secure_new">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SecureMain" />
        </activity>
        <activity android:name=".SecureEdit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SecureMain" />
        </activity>
        <activity
            android:name=".NewPassActivity"
            android:label="@string/new_password">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SecureActivity" />
        </activity>
        <activity
            android:name=".RecoveryActivity"
            android:label="@string/recovery">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SecureActivity" />
        </activity>
        <activity
            android:name="storage.RegistrationActivity"
            android:label="@string/registration">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AddNoteActivity" />
        </activity>
        <activity
            android:name="storage.AndroidExplorer"
            android:label="@string/explorer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name="storage.AndroidExplorerShare" />
        <activity
            android:name="storage.EditActivity"
            android:label="@string/edit_activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Doodlz"
            android:label="@string/new_doodle">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MyDoodlesActivity"
            android:label="@string/my_doodles">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ViewImage"
            android:label="@string/doodle">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyDoodlesActivity" />
        </activity>

        <receiver android:name=".MyWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

    </application>

</manifest>
