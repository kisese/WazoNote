<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#F08080"/>
            <stroke
                android:width="1dp"
                android:color="#F08080"
                />
            <corners
                android:radius="0dp"/>
     
        </shape>
    </item>
	<item>
	    <shape>
	        <gradient 
	       android:startColor="#F08080"
      android:centerColor="#F08080"
      android:endColor="#F08080"
	            android:angle="270"
	            />
	        <stroke 
	            android:width="4dp"
	            android:color="#F08080"
	            />
	        <corners 
	            android:radius="0dp"
	            />

	    </shape>
	</item>
</selector>