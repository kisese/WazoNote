<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#ADD8E6"/>
            <stroke
                android:width="1dp"
                android:color="#006a5acd"
                />
            <corners
                android:radius="20dp"/>
     
        </shape>
    </item>
	<item>
	    <shape>
	        <gradient 
	       android:startColor="#6495ed"
      android:centerColor="#6495ed"
      android:endColor="#6495ed"
	            android:angle="270"
	            />
	        <stroke 
	            android:width="4dp"
	            android:color="#00ffffff"
	            />
	        <corners 
	            android:radius="10dp"
	            />

	    </shape>
	</item>
</selector>